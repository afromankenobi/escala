<html>
<head>
	<title>Generador de escala de notas</title>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8">
	<link href="escala.css" media="screen" rel="stylesheet" type="text/css">
</head>
<script type="text/javascript">
var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
</script>
<script type="text/javascript">
try {
var pageTracker = _gat._getTracker("UA-11840444-1");
pageTracker._trackPageview();
} catch(err) {}</script>
<body>
	<div id="header">
		<h1>Generador de escala de notas</h1> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
		<form id="formulario" method="get">
			<div class="field">Nota mín.	<input size="4" type="text" name="nmin" value="<%=params[:nmin] %>" /></div>
			<div class="field">Nota máx.	<input size="4" type="text" name="nmax" value="<%=params[:nmax] %>" /></div>
			<div class="field">Nota aprobación	<input size="4" type="text" name="napr" value="<%=params[:napr] %>" /></div>
			<div class="field">Exigencia	<input size="4"  type="text" name="exig" value="<%=params[:exig] %>"  /> %</div>
			<div class="field">Ptje. máximo <input size="5" type="text" name="pmax" value="<%=params[:pmax] %>"  /></div>
			<div class="field">Paso 
				<input size="4" type="text" name="paso" value="<%=params[:paso] %>"  /></div>
			<div class="field"><input type="submit" value="Generar tabla"/></div>
		</form>

	</div>
<table>
	<tr>
	<% @notas.each do |nota|%>
	<td valign="top">
	<div id="escala">
		<table>
			<tr><th>Puntaje</th><th>Nota</th></tr>
			<% nota.each do |n| %>
			<tr>
				<td><%= n.first %></td>
				<td

				<% if (n.last*10).round/10.0 < params[:napr] %>
				class="rojo"
				<% end %>

				>
				<%= (n.last*10).round/10.0 %>
				</td>
			</tr>
				<% end %>
			</table>

		</div>
		</td>
		<% end %>
		</tr>
		</table>

		<div id="footer">
			Creado por <a href="http://pumarino.org/">Juan Ignacio Pumarino</a> utilizando <a target="_blank" href="http://www.sinatrarb.com">Sinatra</a> 
		</div>

	</body>
	</html>
